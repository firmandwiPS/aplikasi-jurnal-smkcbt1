<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Biodata Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Biodata"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"/>

                <!-- Nama -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Lengkap"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Kelas -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etKelas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kelas"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Jurusan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilJurusan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etJurusan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jurusan"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tempat Lahir -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTempatLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTempatLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tempat Lahir"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tanggal Lahir -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTanggalLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTanggalLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal Lahir"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Alamat Rumah -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAlamatRumah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAlamatRumah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Rumah"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- No HP -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNoHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNoHp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No. HP"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PKL Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Data PKL"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"/>

                <!-- Tempat PKL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTempatPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTempatPkl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tempat PKL"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Alamat PKL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAlamatPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAlamatPkl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat PKL"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bidang Kerja -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBidangKerja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBidangKerja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bidang Kerja"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Pembimbing -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPembimbing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPembimbing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pembimbing"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mulai PKL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMulaiPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMulaiPkl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mulai PKL"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Selesai PKL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSelesaiPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSelesaiPkl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Selesai PKL"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:focusable="false"
                        android:clickable="true"
                        android:cursorVisible="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Status PKL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStatusPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStatusPkl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Status PKL (Berjalan/Selesai)"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Catatan PKL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCatatanPkl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCatatanPkl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Catatan PKL"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:text="Batal"
                app:cornerRadius="8dp"/>

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:text="Simpan"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>