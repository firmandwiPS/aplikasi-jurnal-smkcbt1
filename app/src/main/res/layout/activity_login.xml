<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header Section (Reduced height) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="557dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- School Logo -->
        <ImageView
            android:id="@+id/logo_sekolah"
            android:layout_width="277dp"
            android:layout_height="258dp"
            android:contentDescription="Logo Sekolah"
            android:src="@drawable/logosmk" />

        <!-- School Name -->
        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="SMK PK CIBITUNG 1"
            android:textColor="#FFA500"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:text="Selamat Datang!"
            android:textColor="#1A3D63"
            android:textSize="48sp"
            android:textStyle="bold" />

        <!-- App Name -->
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="9dp"
            android:text="Di Jurnal PKL SMK PK Cibitung 1"
            android:textColor="@color/oren"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Login Section (Full width, no rounded corners) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_bg_login"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Login Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/oren"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Access Key Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/keyakses_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Key Akses"
            android:textColorHint="@color/oren"
            app:boxStrokeColor="@color/oren"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/oren"
            app:errorEnabled="true"
            app:hintTextColor="@color/oren">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/keyakses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/oren"
                android:textColorHint="@color/oren"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/oren"
            android:text="MASUK"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <!-- Current Date -->
        <TextView
            android:id="@+id/tanggalSekarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Tangggal"
            android:textColor="@color/oren"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- School Name Bottom -->
        <TextView
            android:id="@+id/smkcbt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="78dp"
            android:text="SMK PK Cibitung 1"
            android:textColor="@color/oren"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>