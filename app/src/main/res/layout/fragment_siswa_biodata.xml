<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Biru -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#3F51B5">

            <!-- Foto Profil -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_circle_white"
                android:scaleType="centerCrop"
                android:elevation="4dp" />

            <!-- Nama -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivProfile"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="Nama"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <!-- Jurusan -->
            <TextView
                android:id="@+id/tvRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_centerHorizontal="true"
                android:text="Jurusan"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <!-- Kontak & Info PKL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- NIS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIS"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvNis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Kelas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvKelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Tempat dan Tanggal Lahir -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempat, Tanggal Lahir"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Alamat Rumah -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Rumah"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Nomor HP -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No HP"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvNoHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Tempat PKL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempat PKL"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTempatPkl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Pembimbing -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pembimbing"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvPembimbing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Tanggal PKL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waktu PKL"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvWaktuPkl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Status PKL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status PKL"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />

            <!-- Catatan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catatan PKL"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
